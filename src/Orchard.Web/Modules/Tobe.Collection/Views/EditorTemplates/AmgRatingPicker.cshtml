@using Tobe.Collection.Models
@{
    var amgRatings = (IEnumerable<AmgRating>)ViewBag.AmgRatings;
    var currentValue = ViewData.TemplateInfo.FormattedModelValue as int?;
    var options = amgRatings.Select(x => new SelectListItem { Text = x.Name, Value = x.Id.ToString(), Selected = x.Id == currentValue });
}
@Html.DropDownList("", options, @T("Choose a rating").ToString())